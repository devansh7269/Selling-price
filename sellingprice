    <script>
        document.getElementById('calculateBtn').addEventListener('click', function() {
            // Get input values
            const hours = parseFloat(document.getElementById('hours').value) || 0;
            const materialCost = parseFloat(document.getElementById('materialCost').value) || 0;
            const hourlyWage = parseFloat(document.getElementById('hourlyWage').value) || 100;
            const profitMargin = (parseFloat(document.getElementById('profitMargin').value) || 20) / 100;
            
            // Validate inputs
            if (hours <= 0 || materialCost <= 0) {
                alert('Please enter valid values for hours and material cost.');
                return;
            }
            
            // Calculate costs
            const laborCost = hours * hourlyWage;
            const totalCost = laborCost + materialCost;
            const sellingPrice = totalCost * (1 + profitMargin);
            
            // Display results
            document.getElementById('laborCost').innerHTML = '<span class="rupee-symbol">â‚¹</span>' + laborCost.toFixed(2);
            document.getElementById('materialCostDisplay').innerHTML = '<span class="rupee-symbol">â‚¹</span>' + materialCost.toFixed(2);
            document.getElementById('totalCost').innerHTML = '<span class="rupee-symbol">â‚¹</span>' + totalCost.toFixed(2);
            document.getElementById('sellingPrice').innerHTML = '<span class="rupee-symbol">â‚¹</span>' + sellingPrice.toFixed(2);
            
            // Update summary
            document.getElementById('hourlyRateDisplay').innerHTML = '<span class="rupee-symbol">â‚¹</span>' + hourlyWage.toFixed(0);
            document.getElementById('profitPercentDisplay').textContent = (profitMargin * 100).toFixed(0) + '%';
            
            // Show result section
            document.getElementById('result').style.display = 'block';
            
            // Scroll to results
            document.getElementById('result').scrollIntoView({ behavior: 'smooth' });
        });
        
        // Add some sample values for demonstration
        document.getElementById('hours').value = '8';
        document.getElementById('materialCost').value = '500';
    </script>
